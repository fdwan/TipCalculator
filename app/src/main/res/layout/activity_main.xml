<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editTextTotalBill"
        android:layout_marginTop="53dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tip_value1"
        android:id="@+id/buttonTip1"
        android:layout_marginLeft="71dp"
        android:layout_alignBaseline="@+id/buttonTip3"
        android:layout_alignBottom="@+id/buttonTip3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tip_value2"
        android:id="@+id/buttonTip2"
        android:layout_alignTop="@+id/buttonTip1"
        android:layout_toRightOf="@+id/buttonTip1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tip_value3"
        android:id="@+id/buttonTip3"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/buttonTip2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/totalTipValue"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/buttonTip1"
        android:layout_alignLeft="@+id/buttonTip1"
        android:layout_alignStart="@+id/buttonTip1" />
</RelativeLayout>
